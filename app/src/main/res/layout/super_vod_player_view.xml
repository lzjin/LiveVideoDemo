<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/cloud_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.danqiu.online.live.demo.player.controller.TCControllerWindow
        android:id="@+id/controller_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.danqiu.online.live.demo.player.controller.TCControllerFullScreen
        android:id="@+id/controller_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.danqiu.online.live.demo.player.view.TCDanmuView
        android:id="@+id/danmaku_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.danqiu.online.live.demo.player.controller.TCControllerFloat
        android:id="@+id/controller_float"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>